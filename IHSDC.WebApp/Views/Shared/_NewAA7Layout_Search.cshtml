        background: linear-gradient(to top left, #ff9933 22%, #cc99ff 90%);
    }

    .dropdown-item {
        font-weight: 500;
    }

    .collapsCol {
        background-image: linear-gradient(120deg,#a1c4fd 0,#c2e9fb 100%);
        
        max-height: 44px;
    }
    .btnCol {
        font-size: 22px;
        color: black;
        font-weight: 500;
        margin-top: -14px;
    }
